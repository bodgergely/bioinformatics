SRC_DIR=$PWD/src
alias format='clang-format.exe -i $SRC_DIR/*.cpp $SRC_DIR/*.h'
alias b='format; $PWD/build.sh'
alias e='vim $SRC_DIR/hiddenmessage.cpp'
alias run='$PWD/build/hiddenmessage'
alias t='format; ./run-tests.sh'
alias r='b && cat input.txt | $PWD/build/hiddenmessage'

